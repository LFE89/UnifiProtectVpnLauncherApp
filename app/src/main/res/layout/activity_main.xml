<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="122dp">


    <TableLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0"
        android:gravity="center">

        <TableRow android:gravity="center_horizontal" android:layout_marginBottom="30dp">
            <TextView android:gravity="center_horizontal" android:text="UNIFI VPN ENABLER (INOFFICIAL)" android:textStyle="bold" android:textSize="15dp">

            </TextView>
        </TableRow>
        <TableRow android:layout_width="match_parent">
            <TextView android:text="Cloud Key Ip Address">

            </TextView>
        </TableRow>
        <TableRow >
            <EditText android:id="@+id/txtCloudKeyAddress" android:lines="0" android:height="50dp" android:imeOptions="actionNext"/>
        </TableRow>
        <TableRow android:layout_marginTop="15dp">
            <TextView android:text="Device VPN IP Address">

            </TextView>
        </TableRow>
        <TableRow>
            <EditText android:id="@+id/txtVpnAddress" android:lines="0" android:height="50dp" android:imeOptions="actionDone"/>
        </TableRow>
        <TableRow android:layout_marginTop="15dp">
            <Button android:id="@+id/btnSave" android:text="Save">

            </Button>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>